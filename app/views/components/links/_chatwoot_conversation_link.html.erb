<% display_format ||= 'icon' %>
<% if contact.class.name.downcase == 'contact' && Apps::Chatwoot.first.present? %>
  <%= turbo_frame_tag dom_id(contact, "#{display_format}_chatwoot_conversation_link"), src: chatwoot_conversation_link_account_contact_path(Current.account, contact, display_format: display_format), loading: :lazy do  %>
    <div class='text-[#369EF2] w-5 h-5 flex items-center justify-center animate-pulse'>
      <i data-lucide="message-circle" class= "-rotate-[101deg] w-4 h-4"></i>
    </div>
  <% end %>
<% end %>
