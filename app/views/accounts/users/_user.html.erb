<tr id="<%= dom_id(user, :users__user) %>" is='turbo-frame' class="border-b-2 border-light-palette-p3 last:border-none" data-controller='load-lucid-icons load-flowbite'>
  <td class="py-2.5 pl-4 pr-4 flex-shrink-0">
    <div class="w-[52px] h-[52px] flex">
      <% if user.avatar_url.present? %>
        <div data-controller='lightbox'>
          <img class="rounded-md h-full w-full object-cover" src="<%= user.avatar_url %>" data-src="<%= user.avatar_url %>" data-sub-html="<%= user.full_name %>" alt="<%= user.full_name %>" >
        </div>
      <% else %>
        <div class="border-2 bg-brand-palette-08 rounded-md h-full w-full flex items-center color-fg-soft">
          <i data-lucide="user-cog" class="m-auto"></i>
        </div>
      <% end %>
    </div>
  </td>
  <td class="pr-4 py-2.5 typography-label-1000 color-fg-default max-w-[243px] truncate">
    <%= user.full_name %>
  </td>
  <td class="pr-4 py-2.5 typography-label-1000 color-fg-default max-w-[204px] truncate">
    <%= user.email %>
  </td>
  <td class="pr-4 py-2.5 typography-label-1000 color-fg-default max-w-[204px] truncate">
    <%= user.phone %>
  </td>
  <td class="pr-4 py-2.5 typography-body-r-lh150 text-dark-gray-palette-p2 max-w-[149px] truncate" data-controller="datetime--format-exhibition" data-datetime--format-exhibition-date-value="<%= user.created_at %>" data-datetime--format-exhibition-type-value="compact" data-datetime--format-exhibition-locale-value="<%= current_user.language || '' %>">
  </td>
  <td class="pr-4 py-2.5 typography-body-r-lh150 text-dark-gray-palette-p2 max-w-[150px] truncate" data-controller="datetime--format-exhibition" data-datetime--format-exhibition-date-value="<%= user.updated_at %>" data-datetime--format-exhibition-type-value="compact" data-datetime--format-exhibition-locale-value="<%= current_user.language || '' %>">
  </td>
  <td class="py-2.5 pl-4 pr-4 sticky right-0 bg-light-palette-p5 z-10">
    <div class="flex justify-end gap-2">
      <button id="dropdownuserBtn_<%= user.id %>" data-dropdown-toggle="dropdownuserOptions<%= user.id %>" data-dropdown-placement="left" class="button-default-blank-secondary-icon-only-sm" type="button">
        <i data-lucide="ellipsis-vertical"></i>
      </button>
    </div>
  </td>
</tr>
<div id="dropdownuserOptions<%= user.id %>" class="z-50 hidden bg-white divide-y divide-gray-200 rounded-lg shadow w-48 absolute dark:bg-gray-700">
  <ul class="py-2 typography-text-m-lh150 text-dark-gray-palette-p3 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
    <li>
      <%= link_to edit_account_user_path(Current.account, user), data: { turbo_frame: :_top }, class: "flex items-center space-x-2 px-4 py-2 hover:bg-gray-200 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white" do %>
        <i data-lucide="pencil" class="color-fg-soft"></i>
        <p>
          <%= t('activerecord.models.edit') %>
        </p>
      <% end %>
    </li>
    <li>
      <%= link_to account_user_path(Current.account, user), method: :delete, data: { confirm: t('views.accounts.users.user.are_you_sure?') }, class: "flex items-center space-x-2 px-4 py-2 hover:bg-gray-200 hover:text-dark-gray-palette-p1 dark:hover:bg-gray-600 dark:hover:text-white" do %>
        <i data-lucide="trash" class="color-fg-soft"></i>
        <p>
          <%= t('activerecord.models.delete') %>
        </p>
      <% end %>
    </li>
  </ul>
</div>
