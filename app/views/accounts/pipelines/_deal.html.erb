<%= content_tag :li, id: dom_id(deal), data: { id: deal.id, account_id: Current.account.id, position: deal.position } , class: 'hover:shadow-sm select-none cursor-pointer' do %>
  <%= turbo_stream_from deal %>
  <div class="rounded border-2 color-border-default color-bg-fill-default" data-controller='load-lucid-icons'>
    <%= link_to account_deal_path(Current.account, deal.id), data: { turbo_frame: :_top }, class: 'flex flex-col gap-2 pt-2 px-4' do %>
      <p class="typography-body-900 color-fg-default">
        <%= deal.name %>
      </p>
      <div class="w-full border-[0.5px] color-border-default"></div>
    <% end %>
    <div class='flex items-center'>
      <%= link_to account_contact_path(Current.account, deal.contact), class: "cursor-pointer peer" , data: { turbo_frame: :drawer } do %>
        <div class='flex items-start py-2 pl-4 gap-1'>
          <svg class="w-4 h-4 color-fg-default mt-px shrink-0" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
          </svg>
          <p class='typography-body-900 color-fg-soft hover:color-fg-default break-all <%= dom_id(deal.contact, :stream_full_name) %>'>
            <%= deal.contact.full_name %>
          </p>
        </div>
      <% end %>
      <%= link_to account_deal_path(Current.account, deal.id), data: { turbo_frame: :_top }, class: 'flex-1 py-2' do %>
        &nbsp;
      <% end %>
    </div>
    <div class='flex'>
      <div class='flex grow'>
        <% if deal.users.present? %>
          <div class='flex flex-col'>
            <div class='flex'>
              <%= link_to account_deal_path(Current.account, deal.id), data: { turbo_frame: :_top }, class: 'w-4 h-5' do %>
                &nbsp;
              <% end %>
              <div class="flex -space-x-2 rtl:space-x-reverse">
                <% deal.users.order(id: :desc).limit(2).each do |user| %>
                  <div class='w-5 h-5'>
                    <%= link_to edit_account_user_path(Current.account, user), class: "cursor-pointer peer" , data: { turbo_frame: :_top } do %>
                      <% if user.avatar_url.present? %>
                        <img class="w-5 h-5 rounded-full object-cover hover:shadow-md" src="<%= user.avatar_url %>" alt="">
                      <% else %>
                        <div class="w-5 h-5 flex items-center justify-center bg-gray-300 rounded-full dark:bg-gray-600 hover:shadow-md">
                          <svg class="w-3 h-3 color-fg-default" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                          </svg>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
                <% users_count = deal.users.count %>
                <% remaining = users_count - 2 %>
                <% if users_count  > 2 %>
                  <div class="flex items-center justify-center w-5 h-5 text-xs typography-body-800 text-[10px] color-fg-soft bg-gray-400 rounded-full">
                    <%= remaining > 99 ? "99+" : "#{remaining.to_s}+" %>
                  </div>
                <% end %>
              </div>
            </div>
            <%= link_to account_deal_path(Current.account, deal.id), data: { turbo_frame: :_top }, class: 'h-2' do %>
              &nbsp;
            <% end %>
          </div>
        <% end %>
        <%= link_to account_deal_path(Current.account, deal.id), data: { turbo_frame: :_top }, class: 'flex-1' do %>
          &nbsp;
        <% end if !deal.total_amount_in_cents.zero? || deal.next_event_planned? || deal.users.present? %>
      </div>
      <% if !deal.total_amount_in_cents.zero? || deal.next_event_planned? %>
        <%= link_to account_deal_path(Current.account, deal.id), data: { turbo_frame: :_top } do %>
          <div class='flex items-center flex-wrap gap-1.5 pr-4 pb-2'>
            <% unless deal.total_amount_in_cents.zero? %>
              <div class='inline-flex gap-1 items-center color-fg-feedback-neutral h-5'>
                <div class='w-4 h-4'>
                  <i data-lucide="circle-dollar-sign" class="w-4 h-4"></i>
                </div>
                <span class='typography-body-800'>
                  <%= deal.total_amount_in_cents_at_format %>
                </span>
              </div>
            <% end %>
            <%= render partial: 'accounts/pipelines/deal_event', locals: {event: deal.next_event_planned}  if deal.next_event_planned? %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
